[all]
enabled = false
tags = jetbrains
bears = DuplicateFileBear, SpaceConsistencyBear
files = **
ignore = .**
use_spaces = true

[all.network]
bears = HTTPSBear, InvalidLinkBear

[java]
tags = jetbrains
bears = CheckstyleBear, coalaBear
files = **.java
language = Java
checkstyle_configs = google_checks_coala.xml
indent_size = 2

[java.misc]
bears = FilenameBear, LineLengthBear
file_naming_convention = pascal
max_line_length = 100

[java.documentation]
enabled = false
bears = DocGrammarBear

[java.license]
enabled = false
bears = LicenseCheckBear, LicenseHeaderBear
