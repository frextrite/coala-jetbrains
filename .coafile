[all]
tags = jetbrains
bears = DuplicateFileBear, SpaceConsistencyBear
files = **
ignore = .**
use_spaces = true

[all.network]
enable = false
bears = HTTPSBear, InvalidLinkBear

[java]
tags = jetbrains
bears = ArtisticStyleBear, CheckstyleBear, coalaBear, CPDBear, JavaPMDBear
files = **.java
language = Java
checkstyle_configs = google
indent_size = 4

[java.misc]
bears = FilenameBear, LineLengthBear
file_naming_convention = pascal
max_line_length = 120

[java.documentation]
enable = false
bears = DocGrammarBear

[java.license]
enable = false
bears = LicenseCheckBear, LicenseHeaderBear
